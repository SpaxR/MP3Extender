<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        xmlns:fileList="clr-namespace:UI.Controls.FileList"
        xmlns:controls="clr-namespace:UI.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        d:DataContext="{d:DesignInstance local:MainViewModel}">
    <DockPanel>
        <controls:ApplicationMenu DockPanel.Dock="Top" />
        <controls:DirectorySelector DockPanel.Dock="Top" />
        <controls:DirectoryTree DockPanel.Dock="Left" />
        <fileList:FileList DataContext="{Binding Files}" />
    </DockPanel>
</Window>