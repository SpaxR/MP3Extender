<Window x:Class="UI.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:UI.Settings"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800"
        d:DataContext="{d:DesignInstance local:SettingsViewModel}">

        <StackPanel>
            <CheckBox IsChecked="{Binding UseDarkTheme, Mode=OneWay}" Command="{Binding ChangeTheme}">Use Dark Theme</CheckBox>
            <TextBlock Text="{Binding RootFolderPath}" />
            <Button Command="{Binding ChangeRootFolder}">...</Button>
        </StackPanel>

</Window>